    print('Hai usato correttamente la funzione!')
    return


class Nominativo ():
    def __init__(self, nome=''):
        self.name = nome

    @property
    def name(self):
        return self.nome1

    @name.setter
    def name(self, val=''):
        self.nome1 = val



